<div class="h-60 px-5">
    <div id="map" class="h-60 flex"></div>
</div>

<script type="text/javascript">
  var map = L.map("map").setView([39.766414, -105.228871], 19);
  L.tileLayer(
    'http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 22,
    }).addTo(map);

      
  var MobilityIcon = L.Icon.extend({
    options: {
      shadowUrl: '',
      iconSize:     [60, 60],
      shadowSize:   [10,10],
      }
    });
  var driverBikerAccident = new MobilityIcon({iconUrl: "<%= image_url('biker-walker-accident-red.png') %>"  });
 
  // car-bike conflict areas
  L.marker([latitude, longitude], {icon: driverBikerAccident}).addTo(map)
   .bindPopup(description);
 
  var popup = L.popup();
  function onMapClick(e) {
    popup
        .setLatLng(e.latlng)
        .setContent("You clicked the map at " + e.latlng.toString())
        .openOn(map);
    console.log("You clicked the map at " + e.latlng);
  }

  map.on('click', onMapClick);
  mymap.on('click', onMapClick);
</script>